<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:height="100dp"
        android:width="100dp"
        >
        <shape
            android:shape="ring"
            android:useLevel="false"
            >
            <solid android:color="@color/blue"/>
        </shape>
    </item>
    <item
        android:height="100dp"
        android:width="100dp"
        android:gravity="center"
        >
        <shape
            android:shape="ring"
            android:useLevel="false"
            >
            <gradient
                android:type="radial"
                android:startColor="#D3E1D8"
                android:centerColor="#27C65C"
                android:endColor="#51BC74"
                />
        </shape>
    </item>
</layer-list>
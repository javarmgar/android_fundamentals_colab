<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resourcesactivity.AppResourcesActivity">

    <TextView
        android:id="@+id/int_array_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Integer Array"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/string_array_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="String Array"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/int_array_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hello_world_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/string_array_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView

        android:id="@+id/churros_imageview"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin_regular"
        app:layout_constraintTop_toBottomOf="@id/hello_world_textview"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@raw/churros"/>

</androidx.constraintlayout.widget.ConstraintLayout>